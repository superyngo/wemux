<?xml version="1.0" encoding="utf-8"?>
<!--
  MSIX Package Manifest for wemux

  IMPORTANT: Before building, update the Identity section with values from Microsoft Partner Center:

  1. Go to https://partner.microsoft.com/dashboard
  2. Navigate to your "wemux" app (or create it first)
  3. Go to "Product management" → "Product Identity"
  4. Copy the following values:
     - Package/Identity/Name → Replace "PLACEHOLDER.wemux" below
     - Package/Identity/Publisher → Replace "CN=PLACEHOLDER" below
     - Package/Properties/PublisherDisplayName → Replace "Your Name" below

  Example:
    If Partner Center shows:
      Name: 12345SuperYngo.wemux
      Publisher: CN=A1B2C3D4-E5F6-G7H8-I9J0-K1L2M3N4O5P6

    Then update:
      Name="12345SuperYngo.wemux"
      Publisher="CN=A1B2C3D4-E5F6-G7H8-I9J0-K1L2M3N4O5P6"
-->
<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities"
  xmlns:desktop="http://schemas.microsoft.com/appx/manifest/desktop/windows10">

  <Identity
    Name="WENAN.wemux"
    Publisher="CN=2B98008C-550F-4198-A37B-C393A29FE133"
    Version="0.3.1.0" />


  <Properties>
    <DisplayName>wemux</DisplayName>
    <PublisherDisplayName>WenanLin Studio</PublisherDisplayName>
    <Logo>assets\StoreLogo.png</Logo>
    <Description>Windows Multi Audio Sync - Duplicate system audio to multiple audio devices simultaneously</Description>
  </Properties>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.17763.0" MaxVersionTested="10.0.22621.0" />
  </Dependencies>

  <Resources>
    <Resource Language="en-us" />
    <Resource Language="zh-tw" />
  </Resources>

  <Applications>
    <Application Id="wemux" Executable="wemux.exe" EntryPoint="Windows.FullTrustApplication">
      <uap:VisualElements
        DisplayName="wemux"
        Description="Windows Multi-HDMI Audio Sync"
        BackgroundColor="transparent"
        Square150x150Logo="assets\Square150x150Logo.png"
        Square44x44Logo="assets\Square44x44Logo.png">

        <uap:DefaultTile
          Wide310x150Logo="assets\Wide310x150Logo.png"
          Square310x310Logo="assets\Square310x310Logo.png"
          Square71x71Logo="assets\Square71x71Logo.png">
          <uap:ShowNameOnTiles>
            <uap:ShowOn Tile="square150x150Logo"/>
            <uap:ShowOn Tile="wide310x150Logo"/>
            <uap:ShowOn Tile="square310x310Logo"/>
          </uap:ShowNameOnTiles>
        </uap:DefaultTile>

        <uap:SplashScreen Image="assets\SplashScreen.png" BackgroundColor="transparent" />
      </uap:VisualElements>

      <Extensions>
        <!-- Startup task for auto-start (disabled by default, user can enable) -->
        <desktop:Extension Category="windows.startupTask" Executable="wemux.exe" EntryPoint="Windows.FullTrustApplication">
          <desktop:StartupTask
            TaskId="WemuxStartupTask"
            Enabled="false"
            DisplayName="wemux Audio Sync" />
        </desktop:Extension>
      </Extensions>
    </Application>
  </Applications>

  <Capabilities>
    <!-- Full trust required for WASAPI loopback capture and system tray operations -->
    <rescap:Capability Name="runFullTrust" />
  </Capabilities>
</Package>

